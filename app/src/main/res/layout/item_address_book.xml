<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    tools:showIn="@layout/activity_address_book">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_address_book_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/item_address_book_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_toEndOf="@id/item_address_book_icon"
        android:textSize="16sp"
        tools:text="名字" />

    <TextView
        android:id="@+id/item_address_book_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_address_book_name"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@id/item_address_book_icon"
        android:textSize="14sp"
        tools:text="地址" />

    <TextView
        android:id="@+id/item_address_book_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_address_book_address"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@id/item_address_book_icon"
        android:textSize="14sp"
        tools:text="描述" />
</RelativeLayout>